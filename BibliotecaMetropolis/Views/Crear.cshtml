@model BibliotecaMetropolis.Models.MaterialesBiblioteca

@{
    ViewData["Title"] = "Agregar Nuevo Material";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">➕ Agregar Nuevo Material</h2>

    <form asp-action="Crear" method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label class="form-label">Título</label>
            <input asp-for="Titulo" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Autor</label>
            <input asp-for="Autor" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Año de Publicación</label>
            <input asp-for="AñoPublicacion" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Precio Unitario</label>
            <input asp-for="PrecioUnitario" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Cantidad de Unidades</label>
            <input asp-for="CantidadUnidades" type="number" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-success">💾 Guardar Material</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">⬅️ Volver</a>
    </form>
</div>

